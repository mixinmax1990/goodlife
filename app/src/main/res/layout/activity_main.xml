<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundSecondary"
    tools:context=".MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/statusspace"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/statusspace"
        app:layout_constraintBottom_toTopOf="@id/menu_container"
        android:id="@+id/fragment_container"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/round_edge_layout_25"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/menu_container"
        android:layout_margin="8dp"/>
    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/button_all"
        android:alpha=".8"
        android:src="@drawable/ic_baseline_all_inclusive_24"
        android:foregroundTint="#ffffff"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintLeft_toLeftOf="@id/menu_container"
        app:layout_constraintRight_toLeftOf="@id/button_body"
        app:layout_constraintTop_toTopOf="@id/menu_container"
        app:layout_constraintBottom_toBottomOf="@id/menu_container"
        android:paddingBottom="15dp"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/button_all"
        app:layout_constraintRight_toRightOf="@id/button_all"
        android:text="Health"
        android:textSize="12sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/menu_container"
        android:layout_marginBottom="7dp"
        android:alpha=".3"
        android:fontFamily="sans-serif-medium"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/button_body"
        android:src="@drawable/ic_baseline_favorite_border_24"
        android:foregroundTint="#ffffff"
        android:alpha=".8"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintLeft_toRightOf="@id/button_all"
        app:layout_constraintRight_toLeftOf="@id/button_mind"
        app:layout_constraintTop_toTopOf="@id/menu_container"
        app:layout_constraintBottom_toBottomOf="@id/menu_container"
        android:paddingBottom="15dp"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/button_body"
        app:layout_constraintRight_toRightOf="@id/button_body"
        android:text="Physical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/menu_container"
        android:layout_marginBottom="7dp"
        android:alpha=".3"
        android:textSize="12sp"
        android:fontFamily="sans-serif-medium"
        android:background="@android:color/transparent"/>
    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/button_mind"
        android:alpha=".8"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_baseline_filter_drama_24"
        android:foregroundTint="#ffffff"
        app:layout_constraintLeft_toRightOf="@id/button_body"
        app:layout_constraintRight_toLeftOf="@id/button_money"
        app:layout_constraintTop_toTopOf="@id/menu_container"
        app:layout_constraintBottom_toBottomOf="@id/menu_container"
        android:paddingBottom="15dp"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/button_mind"
        app:layout_constraintRight_toRightOf="@id/button_mind"
        android:text="Mental"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/menu_container"
        android:layout_marginBottom="7dp"
        android:alpha=".3"
        android:textSize="12sp"
        android:fontFamily="sans-serif-medium"
        android:background="@android:color/transparent"/>
    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/button_money"
        android:alpha=".8"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_outline_show_chart_24"
        android:foregroundTint="#ffffff"
        app:layout_constraintLeft_toRightOf="@id/button_mind"
        app:layout_constraintRight_toRightOf="@id/menu_container"
        app:layout_constraintTop_toTopOf="@id/menu_container"
        app:layout_constraintBottom_toBottomOf="@id/menu_container"
        android:paddingBottom="15dp"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/button_money"
        app:layout_constraintRight_toRightOf="@id/button_money"
        android:text="Financial"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/menu_container"
        android:layout_marginBottom="7dp"
        android:alpha=".3"
        android:textSize="12sp"
        android:fontFamily="sans-serif-medium"
        android:background="@android:color/transparent"/>

</androidx.constraintlayout.widget.ConstraintLayout>