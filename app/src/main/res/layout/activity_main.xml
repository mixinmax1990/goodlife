<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundSecondary"
    tools:context=".MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/statusspace"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/app_title"
        app:layout_constraintBottom_toTopOf="@id/menu_container"
        android:id="@+id/fragment_container"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#07FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/menu_container"
        />
    <com.news.goodlife.CustomViews.CustomIcons.HubIcon
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:id="@+id/button_all"
        android:text="Hub"
        android:layout_margin="0dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:foregroundTint="#ffffff"
        android:textColor="#FFFFFF"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintLeft_toLeftOf="@id/menu_container"
        app:layout_constraintRight_toLeftOf="@id/button_body"
        app:layout_constraintBottom_toBottomOf="@id/menu_container"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/statusspace"
        android:text="My Finances"
        android:id="@+id/app_title"
        android:paddingLeft="30dp"
        android:paddingRight="50dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/button_body"
        app:layout_constraintLeft_toRightOf="@id/button_all"
        app:layout_constraintRight_toLeftOf="@id/button_mind"
        app:layout_constraintTop_toTopOf="@id/menu_container"
        app:layout_constraintBottom_toBottomOf="@id/menu_container"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:text="Overview"
        android:gravity="center"
        android:alpha=".3"
        android:textSize="12sp"
        android:fontFamily="sans-serif-medium"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/button_mind"
        android:text="Accounts"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/button_body"
        app:layout_constraintRight_toLeftOf="@id/button_money"
        app:layout_constraintTop_toTopOf="@id/menu_container"
        app:layout_constraintBottom_toBottomOf="@id/menu_container"
        android:alpha=".3"
        android:textSize="12sp"
        android:fontFamily="sans-serif-medium"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Goals"
        android:id="@+id/button_money"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/button_mind"
        app:layout_constraintRight_toRightOf="@id/menu_container"
        app:layout_constraintTop_toTopOf="@id/menu_container"
        app:layout_constraintBottom_toBottomOf="@id/menu_container"
        android:alpha=".3"
        android:textSize="12sp"
        android:fontFamily="sans-serif-medium"
        android:background="?attr/selectableItemBackgroundBorderless"/>

</androidx.constraintlayout.widget.ConstraintLayout>