<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/baseBackground"
    tools:context=".StartActivity">



    <eightbitlab.com.blurview.BlurView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="300dp"
        android:background="#9C000000"
        android:id="@+id/biometric_cover"/>
    <com.news.goodlife.CustomViews.CustomEntries.PageIndicatorBar
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:id="@+id/wallet_page_indicator"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:outlineProvider="none"
        android:visibility="invisible"
        android:elevation="250dp"/>

    <include layout="@layout/start_navigation_content"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@id/menu_container"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="16dp"
        android:id="@+id/menu_drawer">
        <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:id="@+id/account_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:backgroundCustomColor="#19FFFFFF"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/menu_one"
            app:borderCustomRadius="100"/>

        <com.news.goodlife.CustomViews.CustomEntries.RoundedTextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="#28FFFFFF"
            android:text="Manage Budget"
            android:id="@+id/menu_one"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <com.news.goodlife.CustomViews.CustomEntries.RoundedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fixed Costs"
            android:id="@+id/menu_two"
            android:tag="#28FFFFFF"
            android:layout_margin="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:layout_constraintTop_toBottomOf="@id/menu_one"
            app:layout_constraintStart_toStartOf="parent"
            />
        <com.news.goodlife.CustomViews.CustomEntries.RoundedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fixed Income"
            android:id="@+id/menu_three"
            android:tag="#28FFFFFF"
            android:layout_margin="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:layout_constraintTop_toBottomOf="@id/menu_two"
            app:layout_constraintStart_toStartOf="parent"
            />
        <com.news.goodlife.CustomViews.CustomEntries.RoundedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subscriptions"
            android:id="@+id/menu_four"
            android:tag="#28FFFFFF"
            android:layout_margin="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:layout_constraintTop_toBottomOf="@id/menu_three"
            app:layout_constraintStart_toStartOf="parent"
            />
        <com.news.goodlife.CustomViews.CustomEntries.RoundedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank Transactions"
            android:id="@+id/menu_five"
            android:tag="#28FFFFFF"
            android:layout_margin="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:alpha=".5"
            app:layout_constraintTop_toBottomOf="@id/menu_four"
            app:layout_constraintStart_toStartOf="parent"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="7:4"
            android:layout_marginTop="16dp"
            android:padding="50dp"
            android:id="@+id/connect_account_one"
            app:cardCornerRadius="3dp"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/menu_five"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_baseline_account_balance_24"
                    android:padding="0dp"
                    android:alpha=".4"
                    app:tint="#000000" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connect Bank"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textAlignment="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Today"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@id/frame_one_border"
        app:layout_constraintStart_toStartOf="@id/frame_one_border"
        app:layout_constraintEnd_toEndOf="@id/frame_one_border"
        android:layout_marginBottom="20dp"
        android:elevation="150dp"
        android:outlineProvider="none"
        android:id="@+id/frame_one_title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calendar"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@id/frame_one_border"
        app:layout_constraintStart_toStartOf="@id/frame_one_border"
        app:layout_constraintEnd_toEndOf="@id/frame_one_border"
        android:layout_marginBottom="20dp"
        android:elevation="150dp"
        android:outlineProvider="none"
        android:id="@+id/frame_two_title"/>
    <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:strokeCustomColor="#99FFFFFF"
        app:strokeCustomSize="12"
        android:id="@+id/frame_one_border"
        app:borderCustomRadius="60"
        android:elevation="100dp"
        android:outlineProvider="none"
        app:layout_constraintTop_toTopOf="@id/fragment_container_one"
        app:layout_constraintStart_toStartOf="@id/fragment_container_one"
        app:layout_constraintEnd_toEndOf="@id/fragment_container_one"
        app:layout_constraintBottom_toBottomOf="@id/fragment_container_one"/>
    <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:strokeCustomColor="#9AFFFFFF"
        app:strokeCustomSize="12"
        android:elevation="102dp"
        android:outlineProvider="none"
        android:id="@+id/frame_two_border"
        app:borderCustomRadius="60"
        app:layout_constraintTop_toTopOf="@id/fragment_container_two"
        app:layout_constraintStart_toStartOf="@id/fragment_container_two"
        app:layout_constraintEnd_toEndOf="@id/fragment_container_two"
        app:layout_constraintBottom_toBottomOf="@id/fragment_container_two"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="99dp"
        android:outlineProvider="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/fragment_container_one" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="101dp"
        android:outlineProvider="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/fragment_container_two"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:elevation="111dp"
        app:layout_constraintTop_toTopOf="@id/fragment_container_three"
        app:layout_constraintStart_toStartOf="@id/fragment_container_three"
        android:layout_marginTop="40dp"
        android:id="@+id/fragment_container_tree_backarrow"
        android:padding="20dp"/>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="103dp"
        android:translationX="-600dp"
        app:cardElevation="110dp"
        android:outlineProvider="none"
        app:cardBackgroundColor="?attr/backgroundSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/fragment_container_three"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/previewImage"/>

    <!-- Test new Menu -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:elevation="107dp"
        android:outlineProvider="none"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="?attr/backgroundSecondary">
        <com.news.goodlife.CustomViews.BudgetCircleMini
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.news.goodlife.CustomViews.CustomBackground.BehindMenuView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="104dp"
        android:outlineProvider="none"
        android:id="@+id/menu_container_base"
        app:layout_constraintTop_toTopOf="@id/blurviewmenu"
        app:layout_constraintBottom_toBottomOf="@id/blurviewmenu"
        app:layout_constraintStart_toStartOf="@id/blurviewmenu"
        app:layout_constraintEnd_toEndOf="@id/blurviewmenu"/>

            <eightbitlab.com.blurview.BlurView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/menu_container"
                app:layout_constraintLeft_toLeftOf="@id/menu_container"
                app:layout_constraintRight_toRightOf="@id/menu_container"
                app:layout_constraintBottom_toBottomOf="@id/menu_container"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:paddingTop="3dp"
                android:paddingBottom="5dp"
                android:layout_margin="10dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:elevation="107dp"
                android:background="@drawable/round_edge_layout_35"
                android:id="@+id/blurviewmenu">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_height="match_parent">
                    <com.news.goodlife.CustomViews.CustomIcons.FunctionsIcon
                        android:id="@+id/magic_button"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:tag="Function"
                        app:layout_constraintDimensionRatio="1:1"
                        app:cardCornerRadius="40dp"
                        app:cardBackgroundColor="?attr/standoutButton"
                        app:layout_constraintStart_toEndOf="@id/buttonGoals"
                        app:layout_constraintEnd_toStartOf="@id/buttonBudgets"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginStart="2dp"/>
                    <!--?attr/standoutButton-->
                    <com.news.goodlife.CustomViews.CustomIcons.WalletIcon
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="2dp"
                        android:id="@+id/buttonWallet"
                        android:tag="Wallet"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/buttonGoals"/>
                    <com.news.goodlife.CustomViews.CustomIcons.MenuIcons
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="2dp"
                        android:id="@+id/buttonGoals"
                        android:tag="Goals"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/buttonWallet"
                        app:layout_constraintEnd_toStartOf="@id/magic_button"/>
                    <com.news.goodlife.CustomViews.CustomBezierGraph
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:id="@+id/analysis_icon_graph"
                        app:layout_constraintStart_toStartOf="@id/buttonGoals"
                        app:layout_constraintBottom_toBottomOf="@id/buttonGoals"
                        app:layout_constraintTop_toTopOf="@id/buttonGoals"
                        app:layout_constraintEnd_toEndOf="@id/buttonGoals"
                        />
                    <com.news.goodlife.CustomViews.CustomIcons.MenuIcons
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="2dp"
                        android:id="@+id/buttonBudgets"
                        android:tag="Analysis"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/magic_button"
                        app:layout_constraintEnd_toStartOf="@id/buttonHub"/>
                    <com.news.goodlife.CustomViews.BudgetCircleMini
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="10dp"
                        android:id="@+id/budget_icon"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintStart_toStartOf="@id/buttonBudgets"
                        app:layout_constraintEnd_toEndOf="@id/buttonBudgets"
                        app:layout_constraintTop_toTopOf="@id/buttonBudgets"
                        app:layout_constraintBottom_toBottomOf="@id/buttonBudgets"/>
                    <com.news.goodlife.CustomViews.CustomIcons.MenuIcons
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="2dp"
                        android:id="@+id/buttonHub"
                        android:tag="Hub"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/buttonBudgets"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <com.news.goodlife.CustomViews.CustomIcons.FlagGoalIcon
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="22dp"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintStart_toStartOf="@id/buttonHub"
                        app:layout_constraintTop_toTopOf="@id/buttonHub"
                        app:layout_constraintBottom_toBottomOf="@id/buttonHub"
                        app:layout_constraintEnd_toEndOf="@id/buttonHub"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </eightbitlab.com.blurview.BlurView>


    <com.news.goodlife.CustomViews.CustomIcons.WalletIconCard
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="120dp"
        app:layout_constraintStart_toStartOf="@id/blurviewmenu"
        app:layout_constraintTop_toTopOf="@id/blurviewmenu"
        android:layout_margin="9dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:id="@+id/walletCardOne"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#8C8C8C"
        android:visibility="invisible"
        android:id="@+id/seperator_line_menu"
        app:layout_constraintBottom_toTopOf="@id/menu_container"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:id="@+id/menu_container"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/main_menu_float_open_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:fabSize="mini"
        app:maxImageSize="28dp"
        app:backgroundTint="?attr/standoutButton"
        app:tint="?attr/baseBackground"
        android:scaleType="fitXY"
        android:layout_marginBottom="50dp"
        android:padding="0dp"
        android:src="@drawable/ic_baseline_view_module_custom_24"
        app:layout_constraintBottom_toTopOf="@id/menu_container"
        app:layout_constraintStart_toStartOf="@id/menu_container"
        app:layout_constraintEnd_toEndOf="@id/menu_container"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:tint="@color/white"
        app:backgroundTint="@color/white"
        android:elevation="3000dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>