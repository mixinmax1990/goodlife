<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    app:layout_flexBasisPercent="50%"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.news.goodlife.CustomViews.BudgetCircleMini
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:id="@+id/budget_circle_mini"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toTopOf="@id/budget_name"
        />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/budget_circle_mini"
        app:layout_constraintBottom_toBottomOf="@id/budget_circle_mini"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Name"
        android:fontFamily="@font/product_sans_regular"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:id="@+id/budget_name"/>
</androidx.constraintlayout.widget.ConstraintLayout>