<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

   <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
       android:layout_width="60dp"
       android:layout_height="60dp"
       app:layout_constraintDimensionRatio="1:1"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:borderCustomRadius="60"
       android:id="@+id/wallet_day_button"
       app:strokeCustomColor="#60FFFFFF"
       app:strokeCustomSize="4"
       android:visibility="invisible"/>

   <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
       android:layout_width="0dp"
       android:layout_height="0dp"
       app:cardCornerRadius="10dp"
       app:borderCustomRadius="200"
       app:strokeCustomSize="4"
       app:strokeCustomColor="#8FFFFFFF"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="@id/wallet_day_button"
       app:layout_constraintBottom_toBottomOf="@id/wallet_day_button"
       android:id="@+id/day_item_liquidcard"
      >
      <com.news.goodlife.CustomViews.LiquidView
          android:id="@+id/day_liquid"
          app:cardCornerRadius="200dp"
          android:layout_margin="4px"
          android:alpha="1"
          app:cardBackgroundColor="#2C2C2C"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>
   </com.news.goodlife.CustomViews.CustomEntries.BorderRoundView>

   <TextView
       android:id="@+id/day_name"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/wallet_day_button"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:textAlignment="center"
       android:padding="5dp"
       android:alpha="1"
       android:textSize="12sp"
       android:text="Mon"/>
   <TextView
       android:id="@+id/monthview_day_number"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:text="21"
       android:textSize="24sp"
       android:alpha="1"
       android:textAlignment="center"
       app:layout_constraintStart_toStartOf="@id/day_item_liquidcard"
       app:layout_constraintEnd_toEndOf="@id/wallet_day_button"
       app:layout_constraintTop_toTopOf="@id/day_item_liquidcard"
       app:layout_constraintBottom_toBottomOf="@id/day_item_liquidcard"/>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="@id/day_item_liquidcard"
      app:layout_constraintBottom_toBottomOf="@id/wallet_day_button"
      app:layout_constraintStart_toStartOf="@id/wallet_day_button"
      app:layout_constraintEnd_toEndOf="@id/wallet_day_button"
      android:text="145,65â‚¬"
       android:visibility="invisible"
      android:textSize="12sp"
      android:layout_marginBottom="5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>