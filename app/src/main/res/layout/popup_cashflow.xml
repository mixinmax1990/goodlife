<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:scaleX=".5"
    android:scaleY=".5"
    android:id="@+id/cashflow_pop_container"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/popCalendarCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/popCalendarView"
        app:layout_constraintBottom_toBottomOf="@id/popCalendarView"
        app:layout_constraintLeft_toLeftOf="@id/popCalendarView"
        app:layout_constraintRight_toRightOf="@id/popCalendarView"
        app:cardBackgroundColor="?attr/backgroundSecondary"
        android:alpha=".8"
        app:cardElevation="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"

        app:cardCornerRadius="10dp"/>

    <TextView
        android:id="@+id/cashflowPopCloseField"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:src="@drawable/ic_baseline_close_24"
        android:text="Touch here to Close"
        android:gravity="center"
        android:textAlignment="center"
        app:borderWidth="0dp"
        android:alpha=".4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popCardSave"
        />

    <CalendarView
        android:id="@+id/popCalendarView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:outlineProvider="none"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:cardBackgroundColor="#DAFFFFFF"
        android:id="@+id/popCard"
        android:alpha=".03"
        app:layout_constraintTop_toBottomOf="@id/popCalendarView"
        app:layout_constraintBottom_toBottomOf="@id/popCardSave"
        app:cardElevation="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/popCardDate"/>
    <EditText
        android:id="@+id/popCashAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:textAlignment="viewEnd"
        android:textSize="34sp"
        android:elevation="10dp"
        android:outlineProvider="none"
        android:focusedByDefault="true"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:textColor="?attr/textColorPrimary"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toRightOf="@id/selectorIncome"
        app:layout_constraintRight_toRightOf="@id/popCard"
        android:paddingRight="60dp"
        app:layout_constraintTop_toTopOf="@id/popCard"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/popCashCurrencySign"
        app:layout_constraintRight_toRightOf="@id/popCashAmount"
        app:layout_constraintTop_toTopOf="@id/popCashAmount"
        app:layout_constraintBottom_toBottomOf="@id/popCashAmount"
        android:padding="20dp"
        android:layout_marginRight="10dp"
        android:text="â‚¬"
        android:elevation="10dp"
        android:outlineProvider="none"
        android:textColor="?attr/textColorPrimary"
        android:textSize="34sp"
        android:clickable="true"
        android:focusable="true"/>
    <EditText
        android:padding="10dp"
        android:id="@+id/popCashDesc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@id/popCashAmount"
        app:layout_constraintBottom_toBottomOf="@id/popCard"
        app:layout_constraintLeft_toLeftOf="@id/popCard"
        app:layout_constraintRight_toRightOf="@id/popCard"
        android:elevation="10dp"
        android:hint="Add Description"
        android:outlineProvider="none"
        android:background="@android:color/transparent"
        android:textSize="16sp"
        android:textColor="?attr/textColorPrimaryDisabled"
        android:textAlignment="gravity"
        android:gravity="center_horizontal"
        android:clickable="true"
        android:focusable="true"/>


    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/popCard"
        app:layout_constraintDimensionRatio="1:1"
        app:cardBackgroundColor="?attr/backgroundSecondary"
        android:id="@+id/popCardDate"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        android:alpha=".8">


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popCardDate"
        app:layout_constraintDimensionRatio="1:1"
        app:cardBackgroundColor="#007BFF"
        android:id="@+id/popCardSave"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:alpha=".2"
        android:clickable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Save"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="@id/popCardSave"
        app:layout_constraintTop_toTopOf="@id/popCardSave"
        app:layout_constraintDimensionRatio="1:1"
        app:cardBackgroundColor="#FFFFFF"
        android:id="@+id/popCardDelete"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:alpha="1"
        android:visibility="gone"
        android:clickable="true"
        android:transformPivotX="100dp"
        android:transformPivotY="0dp"

        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Remove"
            android:elevation="10dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            />
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/cashflowPopNotifyOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_notifications_none_24"
        app:layout_constraintBottom_toBottomOf="@id/popCardDate"
        app:layout_constraintRight_toRightOf="@id/popCardDate"
        android:tint="?attr/textColorPrimaryDisabled"
        android:elevation="10dp"
        android:layout_margin="8dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:outlineProvider="none"
        android:clickable="true"
        android:focusable="true"
        />
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/cashflowPopNotifyON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_notifications_active_24"
        app:layout_constraintBottom_toBottomOf="@id/popCardDate"
        app:layout_constraintRight_toRightOf="@id/popCardDate"
        android:tint="#007BFF"
        android:visibility="gone"
        android:elevation="10dp"
        android:layout_margin="8dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:outlineProvider="none"
        android:clickable="true"
        android:focusable="true"
        />
    <TextView
        android:id="@+id/popCashDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 July 20"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@id/popCardDate"
        app:layout_constraintBottom_toBottomOf="@id/popCardDate"
        app:layout_constraintLeft_toLeftOf="@id/popCardDate"
        app:layout_constraintRight_toRightOf="@id/popCardDate"
        android:elevation="10dp"
        android:outlineProvider="none"/>
    <Switch
        android:layout_margin="5dp"
        android:layout_gravity="end"
        android:id="@+id/monthlySwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monthly"
        android:textSize="11sp"
        android:textColor="?attr/textColorPrimaryDisabled"
        android:elevation="10dp"
        android:outlineProvider="none"
        app:layout_constraintTop_toTopOf="@id/popCardDate"
        app:layout_constraintLeft_toLeftOf="@id/popCardDate"
        app:layout_constraintRight_toRightOf="@id/popCardDate"/>

    <TextView
        android:id="@+id/selectorIncome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/popCard"
        app:layout_constraintBottom_toBottomOf="@id/popCashAmount"
        app:layout_constraintTop_toBottomOf="@id/selectorCost"
        android:text="+"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingLeft="32dp"
        android:paddingRight="8dp"
        android:paddingBottom="6dp"
        android:clickable="true"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="34sp"
        android:textColor="?attr/textColorPrimary"/>

    <TextView
        android:id="@+id/selectorCost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/popCashAmount"
        app:layout_constraintLeft_toLeftOf="@id/popCard"
        app:layout_constraintBottom_toTopOf="@id/selectorIncome"
        android:text="-"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:alpha=".2"
        android:paddingLeft="36dp"
        android:paddingRight="13dp"
        android:paddingTop="8dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textColor="?attr/textColorPrimary"/>


</androidx.constraintlayout.widget.ConstraintLayout>