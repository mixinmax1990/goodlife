<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingTop="0dp">

    <com.news.goodlife.CustomViews.CustomEntries.PopUpFrame
        android:id="@+id/wallet_balance_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="16:13"
        app:layout_constraintTop_toBottomOf="@id/item_day"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        app:borderCustomRadius="50"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1224,95€"
        android:textColor="?attr/textColorPrimary"
        android:id="@+id/wallet_balance_card_amount_val"
        app:layout_constraintTop_toTopOf="@id/wallet_balance_card"
        app:layout_constraintBottom_toBottomOf="@id/wallet_balance_card"
        app:layout_constraintStart_toStartOf="@id/wallet_balance_card"
        app:layout_constraintEnd_toEndOf="@id/wallet_balance_card"
        android:textSize="26sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance"
        android:textColor="?attr/textColorPrimary"
        android:id="@+id/wallet_balance_card_amount_title"
        app:layout_constraintBottom_toTopOf="@id/wallet_balance_card_amount_val"
        app:layout_constraintStart_toStartOf="@id/wallet_balance_card_amount_val"
        app:layout_constraintEnd_toEndOf="@id/wallet_balance_card_amount_val"
        android:layout_marginBottom="5dp"
        android:alpha=".5"
        android:textSize="14sp"/>


    <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
        android:id="@+id/module_status_overview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="#00000000"
        app:borderCustomRadius="50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/right_up_frame"
        app:layout_constraintTop_toBottomOf="@id/wallet_balance_card"
        app:layout_constraintBottom_toBottomOf="@id/right_up_frame"
        app:strokeCustomColor="#00FFFFFF"
        app:strokeCustomSize="1"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        app:cardElevation="0dp"
        >
        <com.news.goodlife.CustomViews.LiquidView
            android:id="@+id/budget_liquid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="?attr/liquidBackground"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp"
            />

    </com.news.goodlife.CustomViews.CustomEntries.BorderRoundView>
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:id="@+id/right_up_frame"
        app:layout_constraintStart_toEndOf="@id/module_status_overview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wallet_balance_card"

        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        />

    <!--<FrameLayout
        android:id="@+id/cashflow_split"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>-->
    <com.news.goodlife.CustomViews.CustomEntries.PopUpFrame
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="@id/right_up_frame"
        app:layout_constraintEnd_toStartOf="@id/events_incoming"
        app:layout_constraintTop_toTopOf="@id/right_up_frame"
        app:borderCustomRadius="50"
        android:id="@+id/events_outgoing"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ausgaben"
            android:alpha=".5"
            app:layout_constraintBottom_toTopOf="@id/outgoing_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="5dp"
            android:textSize="11sp"
            android:textColor="?attr/textColorPrimary"
            android:id="@+id/outgoint_title"/>
        <TextView
            android:id="@+id/outgoing_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="?attr/textColorPrimary"
            android:text="0€"
            android:textSize="16sp"
            android:alpha="1"
            android:layout_margin="10dp"
            />
    </com.news.goodlife.CustomViews.CustomEntries.PopUpFrame>

    <com.news.goodlife.CustomViews.CustomEntries.PopUpFrame
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@id/right_up_frame"
        app:layout_constraintEnd_toEndOf="@id/right_up_frame"
        app:layout_constraintStart_toEndOf="@id/events_outgoing"
        app:backgroundCustomColor="#1a1b1c"
        app:borderCustomRadius="50"
        android:id="@+id/events_incoming"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Einnahmen"
            android:textSize="11sp"
            app:layout_constraintBottom_toTopOf="@id/incoming_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="5dp"
            android:alpha=".5"
            android:id="@+id/incoming_title"/>
        <TextView
            android:id="@+id/incoming_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="?attr/textColorPrimary"
            android:text="0€"
            android:textSize="16sp"
            android:alpha="1"
            android:layout_margin="10dp"
            />
    </com.news.goodlife.CustomViews.CustomEntries.PopUpFrame>

    <com.news.goodlife.CustomViews.CustomEntries.PopUpFrame
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/events_incoming"
        app:layout_constraintBottom_toBottomOf="@id/right_up_frame"
        app:layout_constraintEnd_toEndOf="@id/events_incoming"
        app:layout_constraintStart_toStartOf="@id/events_outgoing"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        app:backgroundCustomColor="#000000"
        app:borderCustomRadius="50"
        android:id="@+id/cashcat_frame"
        >
        <com.news.goodlife.CustomViews.BubbleChartCategories
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/item_day_bubble_chart"
            android:layout_margin="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <com.news.goodlife.CustomViews.DoughnutChartCategories
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="15dp"
            android:id="@+id/graph"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone"
            />
        <com.google.android.flexbox.FlexboxLayout
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cashcat_flex"
            app:flexDirection="column"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/graph"
            app:layout_constraintEnd_toEndOf="parent"/>


    </com.news.goodlife.CustomViews.CustomEntries.PopUpFrame>


    <com.news.goodlife.CustomViews.CustomEntries.PopUpFrame
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:borderCustomRadius="50"
        app:backgroundCustomColor="#1a1b1c"
        android:id="@+id/casflow_activities_container"
        app:layout_constraintTop_toBottomOf="@id/module_status_overview"
        android:layout_margin="10dp">
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexDirection="column"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="20dp"
            android:alpha="1"
            android:id="@+id/flex_cont"
            app:layout_constraintTop_toTopOf="parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:id="@+id/day_item_add_cashflow"
                android:padding="50dp"
                >
                <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:borderCustomRadius="100"
                    app:strokeCustomSize="2"
                    app:strokeCustomColor="?attr/textColorPrimary"
                    android:alpha=".5"
                    android:id="@+id/add_cash_inday"
                    />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/ic_baseline_add_24"
                    android:alpha=".7"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Data Entry Field -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:visibility="gone"
                android:scaleY=".7"
                android:scaleX=".7"
                android:alpha="0"
                android:id="@+id/add_cashflow_entry_container"
                >
                <com.news.goodlife.CustomViews.CustomEntries.LabeledEntryView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tag="Amount"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="16sp"
                    android:paddingStart="36dp"
                    android:paddingEnd="25dp"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp"
                    android:inputType="numberDecimal"
                    android:background="@android:color/transparent"
                    android:id="@+id/day_newentry_amount"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    android:src="@drawable/ic_baseline_add_24"
                    android:id="@+id/day_newentry_plus"
                    android:padding="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintTop_toTopOf="@id/day_newentry_amount"
                    app:layout_constraintBottom_toBottomOf="@id/day_newentry_amount"
                    app:layout_constraintEnd_toEndOf="@id/day_newentry_amount"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    android:src="@drawable/ic_baseline_remove_24"
                    android:id="@+id/day_newentry_minus"
                    android:padding="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintTop_toTopOf="@id/day_newentry_amount"
                    app:layout_constraintBottom_toBottomOf="@id/day_newentry_amount"
                    app:layout_constraintEnd_toStartOf="@id/day_newentry_plus"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/day_newentry_minusplus_bf"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="@id/day_newentry_amount"
                    android:layout_marginStart="20dp"
                    app:layout_constraintStart_toStartOf="@id/day_newentry_amount"
                    app:layout_constraintBottom_toBottomOf="@id/day_newentry_amount"/>
                <com.news.goodlife.CustomViews.CustomEntries.LabeledEntryView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/day_newentry_amount"
                    android:tag="Description"
                    android:textSize="16sp"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:paddingTop="25dp"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="25dp"
                    android:background="@android:color/transparent"
                    android:id="@+id/day_newentry_description"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/add_cashflow_button_save"
                    android:layout_marginEnd="10dp"
                    android:textSize="16sp"
                    android:alpha=".5"
                    android:textAlignment="textEnd"
                    app:layout_constraintTop_toBottomOf="@id/day_newentry_description"
                    android:text="Save"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan Bill"
                    android:id="@+id/day_scan_bill"
                    app:layout_constraintTop_toBottomOf="@id/day_newentry_description"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="14sp"
                    android:layout_marginStart="16sp"
                    android:padding="10dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ProgressBar
                android:id="@+id/progress_loader"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="20dp"
                android:visibility="visible" />
        </com.google.android.flexbox.FlexboxLayout>
    </com.news.goodlife.CustomViews.CustomEntries.PopUpFrame>

    <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_margin="10dp"
        app:strokeCustomSize="5"
        app:strokeCustomColor="#27FFFFFF"
        app:borderCustomRadius="50"
        app:layout_constraintTop_toBottomOf="@id/casflow_activities_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        android:id="@+id/notes_field">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:textSize="14sp"/>
    </com.news.goodlife.CustomViews.CustomEntries.BorderRoundView>


    <com.news.goodlife.CustomViews.SpectrumBar
        android:id="@+id/spectrumBar"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:visibility="gone"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday"
        android:textSize="24sp"
        android:alpha="1"
        android:id="@+id/item_day"
        android:layout_marginTop="30dp"
        android:textColor="?attr/textColorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21 August 20"
        android:textSize="12sp"
        android:alpha=".6"
        android:textColor="?attr/textColorPrimary"
        android:id="@+id/item_date"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/item_day"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>