<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50dp"
        android:text="Regular Cashflows"
        android:textAlignment="center"
        android:textSize="24sp"
        android:id="@+id/wallet_fix_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.news.goodlife.CustomViews.CustomEntries.PopUpFrame
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/wallet_fix_title"
        app:layout_constraintStart_toStartOf="parent"
        app:borderCustomRadius="50"
        android:padding="0dp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="100dp"
            android:layout_margin="5dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardBackgroundColor="@color/white"
            android:id="@+id/wallet_fix_cost_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Netflix GMBH - 9,99â‚¬"
            android:id="@+id/wallet_fix_cost_name"
            app:layout_constraintStart_toEndOf="@id/wallet_fix_cost_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="every 15 - 16th (Monthly)"
            android:alpha=".3"
            android:id="@+id/wallet_fix_cost_frequency"
            app:layout_constraintStart_toEndOf="@id/wallet_fix_cost_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="10dp"/>

    </com.news.goodlife.CustomViews.CustomEntries.PopUpFrame>
</androidx.constraintlayout.widget.ConstraintLayout>