<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginEnd="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.news.goodlife.CustomViews.BudgetCircle
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="26dp"
        android:id="@+id/budget_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@id/budget_circle"
        app:layout_constraintEnd_toEndOf="@id/budget_circle"
        app:layout_constraintTop_toTopOf="@id/budget_circle"
        app:layout_constraintBottom_toBottomOf="@id/budget_circle">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textAlignment="center"
            android:id="@+id/period_number"
            android:textSize="50sp"
            android:fontFamily="sans-serif-medium"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Month"
            android:id="@+id/period_name"
            android:textSize="16sp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>