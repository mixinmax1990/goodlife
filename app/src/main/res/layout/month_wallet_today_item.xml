<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="2dp"
    app:layout_wrapBefore="false">

    <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
        android:layout_width="66dp"
        android:layout_height="66dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:borderCustomRadius="200"
        android:padding="0dp"
        android:id="@+id/wallet_day_button"
        app:strokeCustomColor="?attr/textColorPrimary"
        app:strokeCustomSize="18"
        android:visibility="visible"/>

    <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="10dp"
        app:borderCustomRadius="200"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="@id/wallet_day_button"
        app:layout_constraintStart_toStartOf="@id/wallet_day_button"
        app:layout_constraintEnd_toEndOf="@id/wallet_day_button"
        app:layout_constraintBottom_toBottomOf="@id/wallet_day_button"
        android:id="@+id/day_item_liquidcard"
        >
        <com.news.goodlife.CustomViews.LiquidView
            android:id="@+id/day_liquid"
            app:cardCornerRadius="200dp"
            android:alpha="1"
            app:cardBackgroundColor="?attr/liquidBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.news.goodlife.CustomViews.CustomEntries.BorderRoundView>

    <TextView
        android:id="@+id/day_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/wallet_day_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:padding="5dp"
        android:alpha="1"
        android:textSize="12sp"
        android:textColor="#00ADFD"
        android:text="Mon"/>
    <TextView
        android:id="@+id/monthview_day_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21"
        android:textSize="20sp"
        android:alpha="1"
        android:textColor="?attr/textColorPrimary"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@id/wallet_day_button"
        app:layout_constraintStart_toStartOf="@id/wallet_day_button"
        app:layout_constraintEnd_toEndOf="@id/wallet_day_button"
        app:layout_constraintBottom_toBottomOf="@id/wallet_day_button"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/day_item_liquidcard"
        app:layout_constraintBottom_toBottomOf="@id/wallet_day_button"
        app:layout_constraintStart_toStartOf="@id/wallet_day_button"
        app:layout_constraintEnd_toEndOf="@id/wallet_day_button"
        android:text="145,65â‚¬"
        android:visibility="gone"
        android:textSize="12sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>