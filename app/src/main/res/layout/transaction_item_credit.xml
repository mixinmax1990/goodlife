<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp">
    <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:borderCustomRadius="250"
        app:backgroundCustomColor="#B9FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="18sp"
        android:id="@+id/transaction_type"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="6dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/black"
       app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/transaction_amount"
        app:layout_constraintBottom_toBottomOf="@id/transaction_amount"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10023"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:id="@+id/transaction_amount"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toStartOf="@id/transaction_type"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:layout_marginEnd="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha=".7"
        android:textColor="@color/black"
        android:id="@+id/transaction_description"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toStartOf="@id/transaction_amount"
        app:layout_constraintTop_toTopOf="@id/transaction_amount"
        app:layout_constraintBottom_toBottomOf="@id/transaction_amount"
        android:text="Description"/>
</androidx.constraintlayout.widget.ConstraintLayout>