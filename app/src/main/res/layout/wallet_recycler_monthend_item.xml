<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.news.goodlife.CustomViews.CustomEntries.PopUpFrame
        android:id="@+id/wallet_balance_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="16:13"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        app:borderCustomRadius="50"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Month End"
        android:textColor="?attr/textColorPrimary"
        android:id="@+id/wallet_balance_card_amount_val"
        app:layout_constraintTop_toTopOf="@id/wallet_balance_card"
        app:layout_constraintBottom_toBottomOf="@id/wallet_balance_card"
        app:layout_constraintStart_toStartOf="@id/wallet_balance_card"
        app:layout_constraintEnd_toEndOf="@id/wallet_balance_card"
        android:textSize="26sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Month"
        android:textColor="?attr/textColorPrimary"
        android:id="@+id/wallet_balance_card_new_month"
        app:layout_constraintTop_toBottomOf="@id/wallet_balance_card"
       android:layout_margin="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/wallet_balance_card"
        app:layout_constraintEnd_toEndOf="@id/wallet_balance_card"
        android:textSize="26sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>