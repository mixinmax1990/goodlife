<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingTop="10dp">
<com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintDimensionRatio="1:1"
    app:cardBackgroundColor="#00000000"
    app:borderCustomRadius="30"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:strokeCustomColor="#00FFFFFF"
    app:strokeCustomSize="1"
    app:backgroundCustomColor="#0AFFFFFF"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="10dp"
    app:cardElevation="0dp"
    >
    <com.news.goodlife.CustomViews.LiquidView
        android:id="@+id/budget_liquid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
            android:layout_width="60dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:strokeCustomColor="#8FFFFFFF"
            app:strokeCustomSize="3"
            app:borderCustomRadius="100"
            android:id="@+id/events_circle"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/events_circle"
            app:layout_constraintBottom_toBottomOf="@id/events_circle"
            app:layout_constraintStart_toStartOf="@id/events_circle"
            app:layout_constraintEnd_toEndOf="@id/events_circle"
            android:text="6"
            android:textSize="20sp"/>
        <com.news.goodlife.CustomViews.CustomIcons.CashflowOutBubble
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- 236,45€"
            android:tag="Ausgaben"
            app:layout_constraintTop_toTopOf="@id/events_circle"
            app:layout_constraintBottom_toBottomOf="@id/events_circle"
            app:layout_constraintEnd_toStartOf="@id/events_circle"
            android:layout_marginEnd="10dp"
            android:id="@+id/events_out"
            />
        <com.news.goodlife.CustomViews.CustomIcons.CashflowBubbleIncoming
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ 925,00€"
            android:tag="Einnahmen"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/events_circle"
            app:layout_constraintBottom_toBottomOf="@id/events_circle"
            app:layout_constraintStart_toEndOf="@id/events_circle"
            android:id="@+id/events_in"
            />

        <com.news.goodlife.CustomViews.SpectrumBar
            android:id="@+id/spectrumBar"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday"
            android:textSize="16sp"
            android:alpha="1"
            android:id="@+id/item_day"
            android:layout_margin="5dp"
            app:layout_constraintBottom_toTopOf="@id/item_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21 August 20"
            android:textSize="12sp"
            android:alpha=".6"
            android:id="@+id/item_date"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.news.goodlife.CustomViews.CustomIcons.CashflowBubbleIncoming
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="180dp"
        android:layout_width="wrap_content"
            android:visibility="gone"
        android:layout_height="wrap_content"
        android:text="925,00€"
        android:tag="Abschlag"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.news.goodlife.CustomViews.CustomEntries.BorderRoundView>
</androidx.constraintlayout.widget.ConstraintLayout>