<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:layout_constraintDimensionRatio="1:1"
    android:paddingTop="60dp">
<com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
    android:id="@+id/budget_liquid_container"
    android:layout_width="0dp"
    android:layout_height="0dp"

    app:cardBackgroundColor="#00000000"
    app:borderCustomRadius="50"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toStartOf="@id/events_outgoing"
    app:layout_constraintTop_toBottomOf="@id/item_date"
    app:layout_constraintBottom_toBottomOf="parent"
    app:strokeCustomColor="#00FFFFFF"
    app:strokeCustomSize="1"
    app:backgroundCustomColor="#0AFFFFFF"
android:layout_margin="10dp"
    app:cardElevation="0dp"
    >
    <com.news.goodlife.CustomViews.LiquidView
        android:id="@+id/budget_liquid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        />

</com.news.goodlife.CustomViews.CustomEntries.BorderRoundView>

        <!--<FrameLayout
            android:id="@+id/cashflow_split"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>-->
        <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toEndOf="@id/budget_liquid_container"
            app:layout_constraintEnd_toStartOf="@id/events_incoming"
            app:layout_constraintTop_toBottomOf="@id/item_date"
            app:backgroundCustomColor="#0FFFFFFF"
            app:borderCustomRadius="50"
            android:id="@+id/events_outgoing"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ausgaben"
                android:alpha=".5"
                app:layout_constraintBottom_toTopOf="@id/outgoing_value"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="5dp"
                android:textSize="12sp"
                android:id="@+id/outgoint_title"/>
            <TextView
                android:id="@+id/outgoing_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="-26,46€"
                android:textSize="18sp"
                android:alpha="1"
                android:layout_margin="10dp"
                />
        </com.news.goodlife.CustomViews.CustomEntries.BorderRoundView>

        <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toBottomOf="@id/item_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/events_outgoing"
            app:backgroundCustomColor="#0FFFFFFF"
            app:borderCustomRadius="50"
            android:id="@+id/events_incoming"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Einnahmen"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@id/incoming_value"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="5dp"
                android:alpha=".5"
                android:id="@+id/incoming_title"/>
            <TextView
                android:id="@+id/incoming_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="+180,46€"
                android:textSize="18sp"
                android:alpha="1"
                android:layout_margin="10dp"
                />
        </com.news.goodlife.CustomViews.CustomEntries.BorderRoundView>

    <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/events_incoming"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/events_incoming"
        app:layout_constraintStart_toStartOf="@id/events_outgoing"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        app:backgroundCustomColor="#37000000"
        app:borderCustomRadius="50"
        android:id="@+id/events_flow"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cashflow"
            android:alpha=".5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="15dp"
            android:id="@+id/flow_title"/>

    </com.news.goodlife.CustomViews.CustomEntries.BorderRoundView>


        <com.news.goodlife.CustomViews.SpectrumBar
            android:id="@+id/spectrumBar"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:visibility="gone"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday"
            android:textSize="18sp"
            android:alpha="1"
            android:id="@+id/item_day"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21 August 20"
            android:textSize="12sp"
            android:alpha=".6"
            android:id="@+id/item_date"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            app:layout_constraintBottom_toTopOf="@id/budget_liquid_container"
            app:layout_constraintTop_toBottomOf="@id/item_day"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


</androidx.constraintlayout.widget.ConstraintLayout>