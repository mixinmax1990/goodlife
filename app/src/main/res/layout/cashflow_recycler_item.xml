<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingTop="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friday, 21 August"
        android:textSize="12sp"
        android:alpha=".5"
        android:id="@+id/item_date"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
<com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
    android:layout_width="match_parent"
    android:layout_height="250dp"
    app:cardBackgroundColor="#20000000"
    app:borderCustomRadius="30"
    app:strokeCustomColor="#00FFFFFF"
    app:strokeCustomSize="1"
    app:backgroundCustomColor="#0AFFFFFF"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="40dp"
    app:cardElevation="0dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
            android:layout_width="60dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="25dp"
            app:strokeCustomColor="#8FFFFFFF"
            app:strokeCustomSize="3"
            app:borderCustomRadius="100"
            android:id="@+id/events_circle"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/events_circle"
            app:layout_constraintBottom_toBottomOf="@id/events_circle"
            app:layout_constraintStart_toStartOf="@id/events_circle"
            app:layout_constraintEnd_toEndOf="@id/events_circle"
            android:text="6"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- 236,45€"
            app:layout_constraintTop_toTopOf="@id/events_circle"
            app:layout_constraintBottom_toBottomOf="@id/events_circle"
            app:layout_constraintEnd_toStartOf="@id/events_circle"
            android:layout_margin="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ 925,00€"
            app:layout_constraintTop_toTopOf="@id/events_circle"
            app:layout_constraintBottom_toBottomOf="@id/events_circle"
            app:layout_constraintStart_toEndOf="@id/events_circle"
            android:layout_margin="15dp"
            />
        <com.news.goodlife.CustomViews.LiquidView
            android:id="@+id/budget_liquid"
            android:layout_width="60dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="20dp"/>
        <com.news.goodlife.CustomViews.SpectrumBar
            android:id="@+id/spectrumBar"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            app:layout_constraintTop_toBottomOf="@id/events_circle"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="20dp"/>
        <com.news.goodlife.CustomViews.CustomIcons.CashflowOutBubble
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center"
            android:layout_marginTop="160dp"
            android:text="-370€"
            android:tag=""
            android:id="@+id/miete2"/>
    <com.news.goodlife.CustomViews.CustomIcons.CashflowBubbleOutgoing
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:layout_marginTop="160dp"
        android:visibility="invisible"
        android:text="-370€"
        android:tag="Miete"
        android:id="@+id/miete"/>

        <com.news.goodlife.CustomViews.CustomIcons.CashflowBubbleIncoming
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="180dp"
        android:layout_width="wrap_content"
            android:visibility="gone"
        android:layout_height="wrap_content"
        android:text="925,00€"
        android:tag="Abschlag"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.news.goodlife.CustomViews.CustomEntries.BorderRoundView>
</FrameLayout>