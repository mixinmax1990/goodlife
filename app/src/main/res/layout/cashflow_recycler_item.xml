<?xml version="1.0" encoding="utf-8"?>
<com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardBackgroundColor="#20000000"
    app:borderCustomRadius="30"
    app:strokeCustomColor="#1EFFFFFF"
    app:strokeCustomSize="1"
    app:backgroundCustomColor="#00FFFFFF"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="20dp"
    app:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friday, 21 August"
            android:textSize="12sp"
            android:alpha=".5"
            android:id="@+id/item_date"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
           />
    <com.news.goodlife.CustomViews.CustomIcons.CashflowBubbleOutgoing
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:layout_marginTop="60dp"
        android:text="-370€"
        android:tag="Miete"
        android:id="@+id/miete"/>
    <com.news.goodlife.CustomViews.CustomIcons.CashflowBubbleOutgoing
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:layout_marginTop="110dp"
        android:text="-399,00 test €"
        android:tag="PS5"
        android:id="@+id/miete2"/>

    <com.news.goodlife.CustomViews.CustomIcons.CashflowBubbleIncoming
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2,500€"
        android:tag="Lohn September"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.news.goodlife.CustomViews.CustomEntries.BorderRoundView>
