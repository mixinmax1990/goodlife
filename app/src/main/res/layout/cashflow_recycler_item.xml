<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <com.news.goodlife.CustomViews.CustomIcons.CashflowBubbleOutgoing
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:text="-370€"
        android:tag="Miete"
        android:id="@+id/miete"/>
    <com.news.goodlife.CustomViews.CustomIcons.CashflowGoalBubble
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/miete"
        app:layout_constraintTop_toTopOf="@id/miete"
        android:textAlignment="center"
        android:text="Goal"
        android:tag="another text"/>
    <com.news.goodlife.CustomViews.CustomIcons.CashflowBubbleIncoming
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_marginTop="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2,500€"
        android:tag="Lohn September"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#6AFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>