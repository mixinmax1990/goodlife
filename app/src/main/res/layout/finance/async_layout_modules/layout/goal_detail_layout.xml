<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/blurContent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/goal_step_chart"
        android:layout_margin="30dp"
        android:textSize="26sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/goalDetailsHeadline"
        android:text="Auto"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/goal_step_chart"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/goalDetailsHeadline"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@android:color/transparent"
        >
        <com.news.goodlife.CustomViews.GoalChartView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            >
        </com.news.goodlife.CustomViews.GoalChartView>

    </androidx.cardview.widget.CardView>
    <com.news.goodlife.CustomViews.DoughnutChartView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/goal_step_chart"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/goal_progress_doughnut"
        />
</androidx.constraintlayout.widget.ConstraintLayout>