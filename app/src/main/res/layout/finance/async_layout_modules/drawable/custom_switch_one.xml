<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <padding android:top="10dp" android:bottom="10dp"/>
            <solid android:color="#6A6A6A"/>
            <size android:width="80dp" android:height="40dp"/>
            <corners android:radius="10dp"/>
            <stroke android:width="0dp" android:color="#2F3137"/>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <padding android:top="10dp" android:bottom="10dp"/>
            <solid android:color="#6A6A6A"/>
            <size android:width="80dp" android:height="50dp"/>
            <corners android:radius="10dp"/>
            <stroke android:width="0dp" android:color="#2F3137"/>
        </shape>
    </item>
</selector>