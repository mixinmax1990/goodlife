<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        android:layout_margin="30dp"
        android:id="@+id/membership_success_card"
        android:visibility="gone"
        android:alpha="0"
        android:scaleY="0.8"
        android:scaleX="0.8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/success_message_cont">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Successfull"
                    android:id="@+id/success_member_title"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-medium"/>

            </FrameLayout>


            <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:borderCustomRadius="20"
                app:backgroundCustomColor="#057FDF"
                android:padding="10dp"
                android:id="@+id/continue_to_bank_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/success_message_cont"
                app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue Connecting Account"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textAlignment="center"
                    android:textColor="@color/white"/>
            </com.news.goodlife.CustomViews.CustomEntries.BorderRoundView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

   <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/membership_header"
       android:layout_marginStart="10dp"
       android:layout_marginTop="50dp"
       android:layout_marginEnd="10dp"
       android:padding="0dp"
       app:borderCustomRadius="50"
       app:strokeCustomColor="#00FFFFFF"
       app:strokeCustomSize="5"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_marginTop="20dp"
           android:padding="90dp"
           android:textSize="26sp"
           android:id="@+id/membership_header_title"
           android:text="Membership"
           />
       <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
           android:layout_width="match_parent"

           android:id="@+id/quote_card"
           app:borderCustomRadius="50"
           app:layout_constraintTop_toBottomOf="@id/membership_header_title"
           app:layout_constraintStart_toStartOf="parent"
           android:padding="0dp"
           android:layout_margin="10dp"
           android:layout_height="wrap_content">

           <TextView
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginTop="60dp"
               android:layout_marginStart="30dp"
               android:layout_marginEnd="30dp"
               android:id="@+id/quote_body"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:fontFamily="sans-serif-light"
               android:textStyle="italic"
               android:alpha="0"
               android:textSize="18sp"
               android:text="Beware of little expenses. A small leak will sink a great ship"/>
           <TextView
               android:layout_marginTop="20dp"
               app:layout_constraintTop_toBottomOf="@id/quote_body"
               android:id="@+id/quote_author"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginBottom="60dp"
               android:layout_marginStart="30dp"
               android:layout_marginEnd="30dp"
               android:alpha="0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               android:text="Benjamin Franklin"/>
           <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
               android:layout_width="100dp"
               android:layout_height="3dp"
               app:backgroundCustomColor="#242A3A"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               android:layout_marginBottom="20dp"
               app:borderCustomRadius="100"
               android:id="@+id/quote_slider_cont"
               >
               <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
                   android:layout_width="20dp"
                   android:layout_height="match_parent"
                   app:backgroundCustomColor="#3E9CEE"
                   app:borderCustomRadius="100"
                   android:id="@+id/quote_slider"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"/>

           </com.news.goodlife.CustomViews.CustomEntries.BorderRoundView>

       </com.news.goodlife.CustomViews.CustomEntries.BorderRoundView>
   </com.news.goodlife.CustomViews.CustomEntries.BorderRoundView>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       app:layout_constraintTop_toBottomOf="@id/membership_header"
       app:layout_constraintStart_toStartOf="parent"
       android:id="@+id/membership_content"
       >

       <com.news.goodlife.CustomViews.MarkedConstraintLayout
           android:id="@+id/mark_trial"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
               android:layout_width="match_parent"
               app:backgroundCustomColor="#212226"
               app:borderCustomRadius="50"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               android:padding="20dp"
               android:layout_margin="10dp"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Free Trial (1 Month)"
                   android:fontFamily="sans-serif-light"
                   android:id="@+id/trial_title"
                   android:tag="title"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toTopOf="@id/trial_price"
                   android:textSize="18sp"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="No Charge - Quit trial anytime in the Membership section *"
                   android:id="@+id/trial_price"
                   android:alpha=".7"
                   android:textSize="12sp"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/trial_title"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_marginTop="5dp"
                   />
           </com.news.goodlife.CustomViews.CustomEntries.BorderRoundView>

       </com.news.goodlife.CustomViews.MarkedConstraintLayout>
       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="0dp">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:textSize="12sp"
               android:layout_marginEnd="20dp"
               android:text="Cut on avg. Income (factor)"/>
       </androidx.constraintlayout.widget.ConstraintLayout>
       <com.news.goodlife.CustomViews.MarkedConstraintLayout
           android:id="@+id/mark_month"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
               android:layout_width="match_parent"
               app:backgroundCustomColor="#212226"
               app:borderCustomRadius="50"
               android:padding="20dp"
               android:layout_margin="10dp"
               android:layout_height="wrap_content"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toBottomOf="parent">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Month"
                   android:fontFamily="sans-serif-light"
                   android:id="@+id/trial_title"
                   android:tag="title"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toTopOf="@id/trial_price"
                   android:textSize="18sp"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="2.89€ per month"
                   android:id="@+id/trial_price"
                   android:alpha=".7"
                   android:textSize="12sp"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/trial_title"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_marginTop="5dp"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="@id/trial_price"
                   android:textSize="12sp"
                   android:text="0.00093%"/>
           </com.news.goodlife.CustomViews.CustomEntries.BorderRoundView>
       </com.news.goodlife.CustomViews.MarkedConstraintLayout>
       <com.news.goodlife.CustomViews.MarkedConstraintLayout
           android:id="@+id/mark_year"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
               android:layout_width="match_parent"
               app:backgroundCustomColor="#212226"
               app:borderCustomRadius="50"
               android:padding="20dp"
               android:layout_margin="10dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Year"
                   android:fontFamily="sans-serif-light"
                   android:id="@+id/trial_title"
                   android:tag="title"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toTopOf="@id/trial_price"
                   android:textSize="18sp"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="28.99€ per year"
                   android:id="@+id/trial_price"
                   android:alpha=".7"
                   android:textSize="12sp"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/trial_title"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_marginTop="5dp"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintStart_toEndOf="@id/trial_price"
                   app:layout_constraintTop_toTopOf="@id/trial_price"
                   app:layout_constraintBottom_toBottomOf="@id/trial_price"
                   android:text="(get 2 Months Free)"
                   android:textSize="12sp"
                   android:layout_marginStart="5sp"
                   android:textColor="#4483EB"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="@id/trial_price"
                   android:textSize="12sp"
                   android:text="0.00082%"/>
           </com.news.goodlife.CustomViews.CustomEntries.BorderRoundView>
       </com.news.goodlife.CustomViews.MarkedConstraintLayout>
       <com.news.goodlife.CustomViews.MarkedConstraintLayout
           android:id="@+id/mark_lifetime"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
               android:layout_width="match_parent"
               app:backgroundCustomColor="#212226"
               app:borderCustomRadius="50"
               android:padding="20dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               android:layout_margin="10dp"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Lifetime"
                   android:fontFamily="sans-serif-light"
                   android:id="@+id/trial_title"
                   android:tag="title"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toTopOf="@id/trial_price"
                   android:textSize="18sp"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="128.99€"
                   android:id="@+id/trial_price"
                   android:alpha=".7"
                   android:textSize="12sp"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/trial_title"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_marginTop="5dp"
                   />

           </com.news.goodlife.CustomViews.CustomEntries.BorderRoundView>
       </com.news.goodlife.CustomViews.MarkedConstraintLayout>

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:padding="30dp"
               android:layout_marginTop="20dp"
               android:layout_marginBottom="50dp"
               android:text="* You can quit your trial at any time inside the Membership section of this Application 'You will never be Charged'. Otherwise if your trial period ends you will become a Monthly Subscriber"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:alpha=".7"
               android:textSize="12sp"/>
       </androidx.constraintlayout.widget.ConstraintLayout>
   </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>