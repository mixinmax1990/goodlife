<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/financial_fragment_constrainlayout">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/topTab"/>

    <TextView
        android:id="@+id/headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topTab"
        android:text="Personal"
        android:paddingLeft="30dp"
        android:paddingRight="50dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="34sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/chart_container"
        android:text="2000"
        android:id="@+id/frameMaxAmount"
        android:textSize="11sp"
        android:alpha=".2"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:outlineProvider="none"
        android:elevation="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/chart_container"
        android:text="-2000"
        android:id="@+id/frameMinAmount"
        android:textSize="11sp"
        android:alpha=".2"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="40dp"
        android:outlineProvider="none"
        android:elevation="10dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/chart_container"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/headline"
        app:layout_constraintBottom_toTopOf="@id/casjflow_timeline_numbers_container">
        <include layout="@layout/chart_finacial_layout"/>
    </FrameLayout>
    <FrameLayout
    android:layout_width="1px"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="@id/chart_container"
    app:layout_constraintBottom_toTopOf="@id/casjflow_timeline_numbers_container"
    android:background="@color/white"
    android:layout_marginStart="88dp"
    android:alpha=".4"
    app:layout_constraintLeft_toLeftOf="parent"
    android:id="@+id/dayline"/>
    <FrameLayout
        android:id="@+id/casjflow_timeline_numbers_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/chart_container"
        app:layout_constraintBottom_toTopOf="@id/cashflow_data_card_inplace"/>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/casjflow_timeline_numbers_container"
        app:layout_constraintBottom_toBottomOf="@id/casjflow_timeline_numbers_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        android:id="@+id/numbers_card"
        app:cardBackgroundColor="?attr/backgroundThirdly">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="1400,95â‚¬"
            android:textColor="?attr/financialGraphTrendline"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/chartresult_amount"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14 July 2020"
        android:padding="8dp"
        android:textSize="12sp"
        android:gravity="center"
        android:alpha=".8"
        android:elevation="0dp"
        android:layout_gravity="center"
        android:id="@+id/chartresult_date"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/numbers_card"
        app:layout_constraintBottom_toTopOf="@id/cashflow_data_card"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/cashflow_data_card_inplace"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/cashflow_data_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/cashflow_data_card_inplace"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="8dp"
        app:cardCornerRadius="25dp"
        android:elevation="50dp"
        android:alpha="1"
        app:cardBackgroundColor="?attr/backgroundThirdly"
        app:cardElevation="0dp">
        <include
            layout="@layout/cashflow_card"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cash_timeline"
        android:layout_width="30dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/cashflow_data_card"
        app:layout_constraintBottom_toBottomOf="@id/cashflow_data_card"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="?attr/backgroundThirdly"
        app:cardElevation="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toLeftOf="@id/cashflow_data_card"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/expand_cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_unfold_more_24"
        app:fabSize="normal"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:focusable="true"
        android:foregroundGravity="center"
        android:tint="@color/black"
        android:backgroundTint="@color/grey1"
        app:borderWidth="0dp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="@id/cashflow_data_card"
        app:layout_constraintLeft_toLeftOf="@id/cashflow_data_card"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:src="@drawable/ic_baseline_add_24"
        android:clickable="true"
        app:fabSize="normal"
        app:cardElevation="30dp"
        android:focusable="true"
        android:tint="@color/black"
        android:backgroundTint="@color/grey1"
        app:borderWidth="0dp"
        app:maxImageSize="36dp"
        app:cardCornerRadius="40dp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="@id/cashflow_data_card"
        app:layout_constraintRight_toRightOf="@id/cashflow_data_card"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:id="@+id/scan_pdf"
        app:borderWidth="0dp"
        android:foregroundTint="?attr/financialGraphTrendline"
        app:layout_constraintBottom_toTopOf="@id/add_cash"
        app:layout_constraintLeft_toLeftOf="@id/add_cash"
        app:layout_constraintRight_toRightOf="@id/add_cash"
        android:tint="@color/black"
        android:visibility="gone"
        android:backgroundTint="@color/grey1"
        android:layout_margin="10dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:id="@+id/scan_camera"
        android:src="@drawable/ic_baseline_photo_camera_24"
        app:borderWidth="0dp"
        android:foregroundTint="?attr/financialGraphTrendline"
        app:layout_constraintBottom_toTopOf="@id/scan_pdf"
        app:layout_constraintLeft_toLeftOf="@id/add_cash"
        app:layout_constraintRight_toRightOf="@id/add_cash"
        android:tint="@color/black"
        android:visibility="gone"
        android:backgroundTint="@color/grey1"
        android:layout_margin="10dp"/>
<TextView
    android:id="@+id/scan_pdf_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="@id/scan_pdf"
    app:layout_constraintRight_toRightOf="@id/scan_pdf"
    app:layout_constraintTop_toTopOf="@id/scan_pdf"
    app:layout_constraintBottom_toBottomOf="@id/scan_pdf"
    android:text="PDF"
    android:visibility="gone"
    android:fontFamily="sans-serif-medium"
    android:textSize="12sp"
    android:elevation="10dp"
    android:textColor="@color/black"/>


    <eightbitlab.com.blurview.BlurView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/finance_blurview"
        android:elevation="200dp"
        android:alpha="0"
        android:visibility="gone">
        <include layout="@layout/popup_cashflow_invisible"/>

    </eightbitlab.com.blurview.BlurView>

</androidx.constraintlayout.widget.ConstraintLayout>