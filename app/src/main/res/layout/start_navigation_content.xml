<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp"
        android:visibility="gone"
        android:textColor="?attr/textColorPrimary"
        android:alpha="1"
        android:id="@+id/wallet_overview_today_title"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calendar"
        android:textColor="?attr/textColorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp"
        android:visibility="gone"
        android:alpha="1"
        android:id="@+id/wallet_overview_calendar_title"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#1C1D20"
        android:visibility="gone"
        android:id="@+id/statusspace"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_baseline_blur_on_24"
        android:layout_marginTop="50dp"
        android:id="@+id/main_branding"
        android:layout_marginStart="20dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wallet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_branding"
        android:layout_marginTop="40dp"
        android:textSize="36sp"
        android:fontFamily="sans-serif-light"/>
    <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/main_branding"
        app:layout_constraintBottom_toBottomOf="@id/main_branding"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundCustomColor="#19FFFFFF"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="12dp"
        app:borderCustomRadius="100"/>


    <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:strokeCustomColor="#81A0ED"
        app:strokeCustomSize="3"
        android:id="@+id/add_account_frame"
        app:borderCustomRadius="30"
        android:layout_marginBottom="40dp"
        android:paddingBottom="60dp"
        android:paddingTop="60dp"
        android:paddingStart="80dp"
        android:paddingEnd="80dp"
        app:layout_constraintBottom_toTopOf="@id/premium_invite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Bank Account"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bank_icon"
            android:id="@+id/addbank_tv"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="#81A0ED"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/addbank_tv"
            android:src="@drawable/ic_baseline_account_balance_24"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/bank_icon"
            app:tint="#81A0ED" />

    </com.news.goodlife.CustomViews.CustomEntries.BorderRoundView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Premium"
        android:textSize="12sp"
        android:alpha="1"
        app:layout_constraintStart_toStartOf="@id/add_account_frame"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="@id/add_account_frame"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/premium_invite"
        android:text="Test our Premium Subscription for Free.\n Start your 1 Month Trial"
        android:textAlignment="center"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="60dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>