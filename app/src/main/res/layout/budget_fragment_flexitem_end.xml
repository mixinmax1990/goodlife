<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="0dp"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    app:layout_flexBasisPercent="50%"
    android:paddingStart="5dp"
    android:paddingEnd="10dp"
    android:paddingTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintTop_toBottomOf="@id/budget_module_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:borderCustomRadius="30"
        android:padding="10dp"
        app:backgroundCustomColor="#2A000000"
        android:id="@+id/budget_cat_cont2"
        >
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            app:flexDirection="row"
            android:id="@+id/budgetitems_flex_container"/>

    </com.news.goodlife.CustomViews.CustomEntries.BorderRoundView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/category_name"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:alpha="1"
        android:text="Category"/>
</LinearLayout>