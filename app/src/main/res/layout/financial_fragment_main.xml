<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/finance_container"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/topTab"/>
    <TextView
        android:id="@+id/headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topTab"
        android:text="Financial"
        android:paddingLeft="30dp"
        android:paddingRight="50dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="34sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/financial_profiles">

        <com.news.goodlife.CustomViews.BezierView
            android:id="@+id/bezier_overview"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="50dp"
            android:transitionName="personal"
            app:graphPosition="Overview" />



    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Goals"
        app:layout_constraintTop_toBottomOf="@id/financial_profiles"
        android:id="@+id/goals_headline"
        android:layout_margin="30dp"
        android:textSize="25sp"
        />
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/finance_overview_flex"
        app:layout_constraintTop_toBottomOf="@id/goals_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexWrap="wrap"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:paddingTop="10dp"
        >
    <com.news.goodlife.CustomViews.GoalEventFrameView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/goal1container"
        android:padding="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            >
            <com.news.goodlife.CustomViews.GoalDrawView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#26282C"
                app:goalProgress="34"
                app:endMoney="16,500"
                app:startMoney="0"
                android:tag="goalSimple"
                >

            </com.news.goodlife.CustomViews.GoalDrawView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auto"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:padding="5dp"
            android:alpha=".5"
            android:textSize="13sp"/>

    </com.news.goodlife.CustomViews.GoalEventFrameView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            >
        <com.news.goodlife.CustomViews.GoalDrawView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#26282C"
            app:goalProgress="20"
            app:endMoney="1,500"
            app:startMoney="0"
            android:tag="goalSimple">

        </com.news.goodlife.CustomViews.GoalDrawView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Holiday"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:padding="5dp"
            android:alpha=".5"
            android:textSize="13sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            >
            <com.news.goodlife.CustomViews.GoalDrawView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#26282C"
                app:goalProgress="92"
                app:endMoney="499"
                app:startMoney="0"
                android:tag="goalSimple">

            </com.news.goodlife.CustomViews.GoalDrawView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Playstation 5"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:padding="5dp"
            android:alpha=".5"
            android:textSize="13sp"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                >
                <com.news.goodlife.CustomViews.GoalDrawView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E74335"
                    app:goalProgress="25"
                    app:endMoney="-1,254"
                    app:startMoney="minus"
                    android:tag="goalSimple">

                </com.news.goodlife.CustomViews.GoalDrawView>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Playstation 5"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:padding="5dp"
                android:alpha=".5"
                android:textSize="13sp"/>

        </LinearLayout>
</com.google.android.flexbox.FlexboxLayout>
    <eightbitlab.com.blurview.BlurView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/finance_main_blurview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:alpha="0"
        android:visibility="gone"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/blurContent">
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/goal_step_chart"
                android:layout_margin="30dp"
                android:textSize="26sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/goalDetailsHeadline"
                android:text="Auto"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/goal_step_chart"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/goalDetailsHeadline"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="@android:color/transparent"
                >
                <com.news.goodlife.CustomViews.GoalChartView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    >
                </com.news.goodlife.CustomViews.GoalChartView>

            </androidx.cardview.widget.CardView>
            <com.news.goodlife.CustomViews.DoughnutChartView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@id/goal_step_chart"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/goal_progress_doughnut"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </eightbitlab.com.blurview.BlurView>
</androidx.constraintlayout.widget.ConstraintLayout>