<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="?attr/backgroundSecondary"
    app:cardCornerRadius="30dp"
    android:orientation="vertical"
    >
            <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/finance_container"
            >
            <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/topTab"/>
            <LinearLayout
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/financial_profiles">

            <com.news.goodlife.CustomViews.BezierView
            android:id="@+id/bezier_overview"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="0dp"
            android:transitionName="personal"
            app:graphPosition="Overview" />



            </LinearLayout>
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Goals"
            app:layout_constraintTop_toBottomOf="@id/financial_profiles"
            android:id="@+id/goals_headline"
            android:layout_margin="30dp"
            android:textSize="25sp"
            />
            <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/finance_overview_flex"
            app:layout_constraintTop_toBottomOf="@id/goals_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:paddingTop="10dp"
            >
            <com.news.goodlife.CustomViews.GoalEventFrameView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/addGoal"
            android:padding="10dp">
            <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="?attr/moduleBackground"
            >
            <ImageView
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_add_24"/>
            </androidx.cardview.widget.CardView>
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Goal"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:padding="5dp"
            android:alpha=".5"
            android:textSize="13sp"/>


            </com.news.goodlife.CustomViews.GoalEventFrameView>
            <com.news.goodlife.CustomViews.GoalEventFrameView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/goal1container"
            android:padding="10dp">
            <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            >
            <com.news.goodlife.CustomViews.GoalDrawView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            app:goalProgress="34"
            app:endMoney="16,500"
            app:startMoney="0"
            android:tag="goalSimple"
            >

            </com.news.goodlife.CustomViews.GoalDrawView>
            </androidx.cardview.widget.CardView>
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auto"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="?attr/textColorPrimary"
            android:padding="5dp"
            android:alpha=".5"
            android:textSize="13sp"/>

            </com.news.goodlife.CustomViews.GoalEventFrameView>

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            >
            <com.news.goodlife.CustomViews.GoalDrawView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            app:goalProgress="20"
            app:endMoney="1,500"
            app:startMoney="0"
            android:tag="goalSimple">

            </com.news.goodlife.CustomViews.GoalDrawView>
            </androidx.cardview.widget.CardView>
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Holiday"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:padding="5dp"
            android:alpha=".5"
            android:textSize="13sp"/>

            </LinearLayout>

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            >
            <com.news.goodlife.CustomViews.GoalDrawView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:goalProgress="40"
            android:background="@android:color/transparent"
            app:endMoney="499"
            app:startMoney="0"
            android:tag="goalSimple">

            </com.news.goodlife.CustomViews.GoalDrawView>
            </androidx.cardview.widget.CardView>
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Playstation 5"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:padding="5dp"
            android:alpha=".5"
            android:textSize="13sp"/>

            </LinearLayout>
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            >
            <com.news.goodlife.CustomViews.GoalDrawView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            app:goalProgress="25"
            app:endMoney="-1,254"
            app:startMoney="minus"
            android:tag="goalSimple">

            </com.news.goodlife.CustomViews.GoalDrawView>
            </androidx.cardview.widget.CardView>
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Playstation 2"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:padding="5dp"
            android:alpha=".5"
            android:textSize="13sp"/>

            </LinearLayout>
            </com.google.android.flexbox.FlexboxLayout>
            <eightbitlab.com.blurview.BlurView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/finance_main_blurview"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:alpha="0"
            android:visibility="gone"
            />

            </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>