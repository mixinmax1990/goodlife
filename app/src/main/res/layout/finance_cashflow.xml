<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cashflow_recycler"/>

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:visibility="gone">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.news.goodlife.CustomViews.VerticalBezierView
                android:layout_width="match_parent"
                android:layout_height="6000dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <com.news.goodlife.CustomViews.CustomIcons.CashflowBubbleIncoming
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="500dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2,500€"
                android:tag="Lohn September"/>

            <com.news.goodlife.CustomViews.CustomIcons.CashflowBubbleOutgoing
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="400dp"
                android:textAlignment="center"
                android:text="-370€"
                android:tag="Miete"
                android:id="@+id/miete"/>
            <com.news.goodlife.CustomViews.CustomIcons.CashflowGoalBubble
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/miete"
                app:layout_constraintTop_toTopOf="@id/miete"
                android:textAlignment="center"
                android:text="Goal"
                android:tag="another text"/>


            <com.news.goodlife.CustomViews.CustomIcons.CashflowBubbleOutgoing
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="1200dp"
                android:textAlignment="center"
                android:text="-150€"
                android:tag="Sundern"/>
            <com.news.goodlife.CustomViews.CustomIcons.CashflowBubbleOutgoing
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="1260dp"
                android:textAlignment="center"
                android:text="-650€"
                android:tag="iPhone"/>

            <com.news.goodlife.CustomViews.CustomIcons.CashflowBubbleIncoming
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="1400dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="925€"
                android:tag="Abschlag"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
    <FrameLayout
        android:id="@+id/accounts_overview"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#0A000000"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.news.goodlife.CustomViews.CustomIcons.SubSectionIcon
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/accounts_overview"
        app:layout_constraintBottom_toBottomOf="@id/accounts_overview"
        app:layout_constraintRight_toLeftOf="@id/account2tab"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:paddingBottom="2dp"
        android:tag="tab3"
        android:text="+ Add"
        android:textSize="12sp"
        android:gravity="center"
        android:outlineProvider="none"
        android:id="@+id/account3tab"/>

    <com.news.goodlife.CustomViews.CustomIcons.SubSectionIcon
        android:layout_width="120dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/accounts_overview"
        app:layout_constraintBottom_toBottomOf="@id/accounts_overview"
        app:layout_constraintRight_toLeftOf="@id/account1tab"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:tag="tab2"
        android:text="Account 2"
        android:textSize="12sp"
        android:outlineProvider="none"
        android:paddingBottom="2dp"
        android:gravity="center"
        android:id="@+id/account2tab"/>


    <com.news.goodlife.CustomViews.CustomIcons.SubSectionIcon
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:tag="tab1"
        app:layout_constraintTop_toTopOf="@id/accounts_overview"
        app:layout_constraintBottom_toBottomOf="@id/accounts_overview"
        app:layout_constraintRight_toRightOf="@id/accounts_overview"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text="Account 1"
        android:textSize="12sp"
        android:outlineProvider="none"
        android:id="@+id/account1tab"/>

    <FrameLayout
        android:id="@+id/cashflow_input_frame"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cashout_btn"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="#17FFFFFF"
        android:layout_margin="2dp"
        android:outlineProvider="none"
        app:layout_constraintTop_toTopOf="@id/cashflow_input_edittext_frame"
        app:layout_constraintRight_toRightOf="@id/cashflow_input_edittext_frame"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_remove_24"
            android:layout_margin="5dp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cashin_btn"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="#17FFFFFF"
        android:layout_margin="2dp"
        android:outlineProvider="none"
        app:layout_constraintTop_toTopOf="@id/cashflow_input_edittext_frame"
        app:layout_constraintRight_toLeftOf="@id/cashout_btn"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_add_24"
            android:layout_margin="5dp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cashupload_btn"
        android:layout_width="46dp"
        android:layout_height="46dp"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="#17FFFFFF"
        android:layout_marginEnd="5dp"
        android:outlineProvider="none"
        app:layout_constraintRight_toRightOf="@id/cashflow_input_frame"
        app:layout_constraintTop_toTopOf="@id/cashflow_input_frame"
        app:layout_constraintBottom_toBottomOf="@id/cashflow_input_frame">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_attach_file_24"
            android:layout_margin="10dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cashflow_input_edittext_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:outlineProvider="none"
        app:cardBackgroundColor="#17FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cashupload_btn"
        app:layout_constraintTop_toTopOf="@id/cashupload_btn"
        app:layout_constraintBottom_toBottomOf="@id/cashupload_btn"
        app:cardCornerRadius="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/cash_entryEdit"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="@id/cashflow_input_edittext_frame"
        app:layout_constraintBottom_toBottomOf="@id/cashflow_input_edittext_frame"
        app:layout_constraintLeft_toLeftOf="@id/cashflow_input_edittext_frame"
        app:layout_constraintRight_toRightOf="@id/cashflow_input_edittext_frame"
        android:paddingStart="60dp"
        android:paddingEnd="50dp"
        android:hint="Cash"
        android:inputType="number"
        android:background="@android:color/transparent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>