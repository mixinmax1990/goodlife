<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="?attr/backgroundSecondary"
    app:cardCornerRadius="30dp"
    android:orientation="vertical"
    >

    <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
        android:layout_width="6dp"
        android:layout_height="6dp"
        app:borderCustomRadius="50"
        app:backgroundCustomColor="#FFFFFF"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="2dp"
        android:elevation="200dp"
        android:id="@+id/slide_indicator"
        android:outlineProvider="none"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            layout="@layout/wallet_main_month_graph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/multidaysmonthgraph"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/multidaysmonthgraph"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="10dp"
            android:id="@+id/recycler_top"/>
    <com.news.goodlife.CustomViews.ElasticEdgeView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="100dp"
        android:outlineProvider="none"
        android:visibility="gone"
        android:id="@+id/elasticEdge"/>
    <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        app:backgroundCustomColor="#17191C"
        android:layout_height="wrap_content"
        app:borderCustomRadius="20"
        android:visibility="gone"
        android:elevation="30dp"
        android:outlineProvider="none"
        android:layout_marginTop="50dp">
        <TextView
            android:id="@+id/overflow_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday"
            android:textColor="#EFEFEF"
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="4dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            />
    </com.news.goodlife.CustomViews.CustomEntries.BorderRoundView>
    <FrameLayout
        android:id="@+id/elasticContentSkeleton"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"/>
    <include
        android:id="@+id/cashflow_display_menu"
        layout="@layout/cashflow_display_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/elasticContentSkeleton"
        app:layout_constraintStart_toStartOf="@id/elasticContentSkeleton"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/recycler_top"
        app:layout_constraintBottom_toTopOf="@id/cashflow_input_frame"
        android:id="@+id/cashflow_recycler"/>

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:visibility="gone">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.news.goodlife.CustomViews.VerticalBezierView
                android:layout_width="match_parent"
                android:layout_height="6000dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <com.news.goodlife.CustomViews.CustomIcons.CashflowBubbleIncoming
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="500dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2,500€"
                android:tag="Lohn September"/>

            <com.news.goodlife.CustomViews.CustomIcons.CashflowBubbleOutgoing
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="400dp"
                android:textAlignment="center"
                android:text="-370€"
                android:tag="Miete"
                android:id="@+id/miete"/>
            <com.news.goodlife.CustomViews.CustomIcons.CashflowGoalBubble
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/miete"
                app:layout_constraintTop_toTopOf="@id/miete"
                android:textAlignment="center"
                android:text="Goal"
                android:tag="another text"/>


            <com.news.goodlife.CustomViews.CustomIcons.CashflowBubbleOutgoing
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="1200dp"
                android:textAlignment="center"
                android:text="-150€"
                android:tag="Sundern"/>
            <com.news.goodlife.CustomViews.CustomIcons.CashflowBubbleOutgoing
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="1260dp"
                android:textAlignment="center"
                android:text="-650€"
                android:tag="iPhone"/>

            <com.news.goodlife.CustomViews.CustomIcons.CashflowBubbleIncoming
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="1400dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="925€"
                android:tag="Abschlag"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/cashflow_input_frame"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/cashout_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="#D3FFFFFF"
        android:layout_margin="3dp"
        android:outlineProvider="none"
        app:layout_constraintTop_toTopOf="@id/cashflow_input_edittext_frame"
        app:layout_constraintRight_toRightOf="@id/cashflow_input_edittext_frame"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_remove_24"
            android:layout_margin="5dp"
            app:tint="@android:color/black"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cashin_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="#D3FFFFFF"
        android:layout_margin="3dp"
        android:outlineProvider="none"
        app:layout_constraintTop_toTopOf="@id/cashflow_input_edittext_frame"
        app:layout_constraintRight_toLeftOf="@id/cashout_btn"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_add_24"
            android:layout_margin="5dp"
            app:tint="@color/black"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cashupload_btn"
        android:layout_width="46dp"
        android:layout_height="46dp"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="#7C1E88E5"
        android:layout_marginEnd="5dp"
        android:outlineProvider="none"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_attach_file_24"
            android:layout_margin="10dp"/>
    </androidx.cardview.widget.CardView>

    <com.news.goodlife.CustomViews.CustomEntries.BorderRoundView
        android:id="@+id/cashflow_input_edittext_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cashupload_btn"
        app:layout_constraintTop_toTopOf="@id/cashupload_btn"
        app:layout_constraintBottom_toBottomOf="@id/cashupload_btn"
        app:borderCustomRadius="150"
        app:backgroundCustomColor="#313740"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/cash_entryEdit"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/cashflow_input_edittext_frame"
        app:layout_constraintBottom_toBottomOf="@id/cashflow_input_edittext_frame"
        app:layout_constraintLeft_toLeftOf="@id/cashflow_input_edittext_frame"
        app:layout_constraintRight_toLeftOf="@id/cashin_btn"
        android:textAlignment="center"
        android:hint="Enter Amount"
        android:inputType="number"
        android:background="@android:color/transparent"
        />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>