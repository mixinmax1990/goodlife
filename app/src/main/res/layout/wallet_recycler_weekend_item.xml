<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.news.goodlife.CustomViews.CustomEntries.PopUpFrame
        android:id="@+id/weekend_analysis_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="16:13"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        app:borderCustomRadius="50"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Week Analysis"
        android:textColor="?attr/textColorPrimary"
        android:id="@+id/weeken_analysis_title"
        app:layout_constraintTop_toTopOf="@id/weekend_analysis_card"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/weekend_analysis_card"
        app:layout_constraintEnd_toEndOf="@id/weekend_analysis_card"
        android:textSize="26sp"/>

    <com.news.goodlife.CustomViews.BarChartHorizontal
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/weekendchart"
        app:layout_constraintStart_toStartOf="@id/weekend_analysis_card"
        app:layout_constraintEnd_toEndOf="@id/weekend_analysis_card"
        app:layout_constraintTop_toBottomOf="@id/weeken_analysis_title"
        app:layout_constraintBottom_toTopOf="@id/extra_weekend_analysis_data"/>
    <FrameLayout
        android:id="@+id/extra_weekend_analysis_data"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/weekendchart"
        app:layout_constraintBottom_toBottomOf="@id/weekend_analysis_card"
        app:layout_constraintStart_toStartOf="@id/weekend_analysis_card"
        app:layout_constraintEnd_toEndOf="@id/weekend_analysis_card"/>
</androidx.constraintlayout.widget.ConstraintLayout>